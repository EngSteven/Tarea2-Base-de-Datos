@page
@model WebApplication2.Pages.Clientes.BorrarModel
@{
}

<br />
<center>
    <h2>Borrar Articulo</h2>
</center>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Codigo</label>
        <div class="col-sm-6">
            <label class="col-sm-3 col-form-label">@Model.articulo.Codigo</label>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nombre</label>
        <div class="col-sm-6">
            <label class="col-sm-3 col-form-label">@Model.articulo.Nombre</label>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Clase</label>
        <div class="col-sm-6">
            <label class="col-sm-3 col-form-label">@Model.articulo.Clase</label>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Precio</label>
        <div class="col-sm-6">
            <label class="col-sm-3 col-form-label">@Model.articulo.Precio</label>
        </div>
    </div>


    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="col-sm-3">
            <label class="col-form-label">Confirmar</label>
        </div>

        <div class="col-sm">
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">OK</button>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <input type="text" class="form-control" name="Codigo1" value="@Model.articulo.Codigo" hidden />
    </div>
</form>

<form asp-page-handler="Confirmar" method="post">
    <div class="col-sm">
        <div class="d-grid">
            <button class="btn btn-outline-primary" name="NoComfirmar" role="button">Cancel</button>
        </div>
    </div>
</form>
